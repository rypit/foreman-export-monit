#!/bin/bash

PID_FILE=${PID_FILE:-<%= default_pid_file_for(name) %>}
LOG_FILE=${LOG_FILE:-<%= default_log_file_for(name) %>}

STATUS_RUNNING=0
STATUS_DEAD_WITH_PID=1
STATUS_UNKNOWN=4

function checkpid() {
    [ -z $1 ] && return 1
    [ -d /proc/$1 ] && return 0
    ps -p $1 2>&1 > /dev/null
    if [ $? -eq 0 ]; then
        return 0
    fi
    return 1
}

function start() {
    echo -n "Starting process $0 ..."
    if [ -s $PID_FILE ]
    then
      read pid < $PID_FILE
      if checkpid $pid 2>&1; then
          echo "[FAIL] process with PID ${pid} is running."
          exit $STATUS_UNKNOWN
      fi
    fi

    source /etc/profile.d/rvm.sh
    cd <%= engine.root %>
    <%= process.command %> >> $LOG_FILE 2>&1 &

    if [ $? -eq 0 ]; then
        echo $! > $PID_FILE
        echo "[OK]"
    else
        echo "[FAIL]"
        exit $STATUS_UNKNOWN
    fi
}

function stop() {
    echo -n "Terminating process $0 ..."
    if [ -s $PID_FILE ]
    then
        read pid < $PID_FILE
        if checkpid $pid 2>&1; then
            kill -SIGTERM $pid
            if [ $? -eq 0 ]; then
                echo $! > $PID_FILE
                echo "[OK]"
                rm -rf $PID_FILE
            else
                echo "[FAIL]"
                exit $STATUS_UNKNOWN
            fi
        else
            echo "[FAIL] process with PID ${pid} does not exist"
            exit $STATUS_DEAD_WITH_PID
        fi
    else
        echo "[FAIL] pid file $PID_FILE is not found"
        exit $STATUS_UNKOWN
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 0
esac

exit $STATUS_RUNNING
